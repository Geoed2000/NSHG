<Window x:Class="XMLEditor.ConnectionCreator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XMLEditor"
        mc:Ignorable="d"
        Title="ConnectionCreator" Height="400" Width="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="System1" Grid.Row="0"/>
        <TextBox x:Name="System2" Grid.Row="1"/>
        <Button  x:Name="Done" Margin ="2" Grid.Row="2" Click="Done_Click">Create</Button>
    </Grid>
</Window>
